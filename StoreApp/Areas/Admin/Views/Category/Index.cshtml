@model IEnumerable<Category>

<div class="container my-3">
    <h2 class="text-center">Category Management</h2>
</div>


<div class="container my-5">
    <ul class="list-group">
        @foreach (var cat in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                @cat.CategoryName
                <div class="btn-group" role="group" aria-label="Category Actions">
                    <a href="@Url.Action("Update", "Category", new { id = cat.CategoryId })" class="btn btn-primary">
                        Edit
                    </a>
                    <a href="@Url.Action("Delete", "Category", new { id = cat.CategoryId })" class="btn btn-danger">
                        Delete
                    </a>
                </div>
            </li>
        }
    </ul>

    <div class="mt-3">
        <a href="@Url.Action("Create", "Category")" class="btn btn-success">Add Category</a>
    </div>
</div>
